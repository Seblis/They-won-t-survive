const ULT_AVAILABLE = preload(\"res://assets/sprites/ult_available.png\")
const ULT_USED = preload(\"res://assets/sprites/ult_used.png\")

# Called when the node enters the scene tree for the first time.
func _ready():
	SignalManager.on_ult_available_switch.connect(switch_texture)


# Called every frame. 'delta' is the elapsed time since the previous frame.
func switch_texture(ult_available: bool):
	if ult_available:
		texture = ULT_AVAILABLE
	else:
		texture = ULT_USED
